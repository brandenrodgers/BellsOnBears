[
  {
    "label": "Icon",
    "name": "icon_field",
    "type": "icon",
    "required": true,
    "default": {
      "name": "clock",
      "unicode": "f017",
      "type": "REGULAR"
    }
  },
  {
    "label": "Accessibility options",
    "name": "accessibility",
    "type": "group",
    "children": [
      {
        "label": "Purpose",
        "name": "purpose",
        "id": "purpose",
        "type": "choice",
        "choices" : [ [ "decorative", "Ignored by screen reader" ], [ "semantic", "Read by screen reader" ] ],
        "required" : true,
        "default" : "decorative"
      },
      {
        "label": "Title",
        "name": "title",
        "type": "text",
        "visibility": {
          "controlling_field": "purpose",
          "controlling_value_regex": "semantic",
          "operator": "EQUAL"
        },
        "required" : true,
        "default": ""
      }
    ]
  },
  {
    "label": "Override default style",
    "name": "override_default_style",
    "id": "override_default_style",
    "type": "boolean",
    "help_text": "Enabling this option will allow you to override default theme styles. Disabling this option will reconnect the module back to the default theme styles.",
    "default": false
  },
  {
    "label": "Style options",
    "name": "style",
    "type": "group",
    "visibility": {
      "controlling_field": "override_default_style",
      "controlling_value_regex": "true",
      "operator": "EQUAL"
    },
    "children": [
      {
        "label": "Size",
        "name": "size",
        "type": "number",
        "help_text": "Value is in pixels",
        "display": "text",
        "min": 1,
        "max": 100,
        "default": 60
      },
      {
        "label": "Color",
        "name": "color",
        "type": "color",
        "visibility": {
          "hidden_subfields": {
            "opacity": true
          }
        },
        "default": {
          "color": "#34B5E5"
        }
      }
    ]
  }
]
